<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyBlog.PresentationLayer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyBlog.PresentationLayer.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@800;500&display=swap" rel="stylesheet">
    



</head>
<body>
    <header class="my-header">
        <div class="header-center">
            <div class="header-title">Final Blog</div>
            <div class="header-tagline">Bloğuma Hoşgeldiniz.</div>
        </div>
        <div class="header-right">
            <a href="https://linkedin.com/in/volkangulec" target="_blank" class="header-icon"><i class="fa-brands fa-linkedin"></i></a>
            <a href="https://github.com/volkangulecx" target="_blank" class="header-icon"><i class="fa-brands fa-github"></i></a>
            <a href="/" class="header-icon" title="Ana Sayfa"><i class="fa-solid fa-house"></i></a>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="width:100%; margin-top:40px; background:#f4f4f6; padding:15px 0 10px 0; border-top:1.5px solid #e5e7eb;">
        <div style="max-width:1200px; margin:0 auto; display:flex; align-items:center; justify-content:space-between;">
            <div>
                <a href="@Url.Action("Privacy", "Home")" style="color:#2563eb;font-weight:bold;text-decoration:none;">
                    <i class="fa-solid fa-shield-halved"></i> Privacy
                </a>
                
            </div>
            <div style="color:#7a7a8c;font-size:0.95em;">
                © @DateTime.Now.Year - MyBlog.PresentationLayer
            </div>
            <a href="/Admin"
               style="display:inline-flex;align-items:center;gap:8px;font-weight:600;color:#2563eb;text-decoration:none;font-size:1.09em;">
                <i class="fa-solid fa-user-gear"></i> Admin Paneli
            </a>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
